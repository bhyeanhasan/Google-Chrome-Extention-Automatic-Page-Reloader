{
    "name"              :   "Auto Page Refresher",
    "description"       :   "Simple auto page loader, developed by Noyon (PSTU-CSE)",
    "version"           :   "1.0.0",
    "manifest_version"  :   2,
    "icons"             :   {
                                "64": "icons/64.png",
                                "128": "icons/128.png",
                                "256": "icons/256.png"
                            },

    "permissions"       :   [
                                "alarms",
                                "storage"
                            ],

    "background"        :   {
                                "scripts"       : ["background.js"],
                                "persistent"    : false
                            },

    "browser_action":       {
                                "default_popup" : "design.html"
                            }
}